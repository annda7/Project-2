<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Sign in!</h5>
          <form action="/login/check" method="POST">
            <div>
              <label for="username">Username</label>
              <input
              type="username"
              id="username"
              name="username"
              />
            </div>
            <div>
              <label for="password">Password</label>
              <input
              type="password"
              id="password"
              name="password"
              />
            </div>
            <button type="submit">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>